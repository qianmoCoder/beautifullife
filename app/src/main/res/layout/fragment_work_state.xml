<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ecedf1"
    android:orientation="vertical">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点我" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        android:textAllCaps="false" />

    <com.ddu.icore.ui.view.CustomerTimeLineMarker
        android:id="@+id/item_time_line_mark"
        android:layout_width="50dp"
        android:layout_height="@dimen/dp_300"
        android:layout_gravity="center"
        mm:beginLine="@color/c_cccccc"
        mm:endLine="@color/c_cccccc"
        mm:lineSize="1dp"
        mm:marker="@drawable/ic_timeline_default_marker"
        mm:markerSize="7dp" />
</LinearLayout>
