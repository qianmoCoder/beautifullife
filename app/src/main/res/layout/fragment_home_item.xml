<androidx.appcompat.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card:cardBackgroundColor="@color/c_4897fa"
    card:cardCornerRadius="@dimen/dp_5"
    card:cardPreventCornerOverlap="true"
    card:cardUseCompatPadding="true"
    card:contentPadding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="World" />


</androidx.appcompat.widget.CardView>
