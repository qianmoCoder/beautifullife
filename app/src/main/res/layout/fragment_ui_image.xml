<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_272727"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/c_4897fa">

            <com.ddu.icore.ui.view.CircleImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_test_0"
                app:civ_border_color="@color/dark"
                app:civ_border_width="2dp" />

            <android.support.v4.widget.Space
                android:layout_width="@dimen/dp_20"
                android:layout_height="wrap_content" />

            <com.ddu.icore.ui.view.CircleImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_test_0"
                app:civ_border_color="@color/light"
                app:civ_border_width="2dp" />


        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <LinearLayout style="@style/UILayoutStyle">

                <ImageView
                    android:id="@+id/iv1"
                    style="@style/UIImageStyle" />

                <TextView
                    style="@style/UITextStyle"
                    android:text="Normal" />
            </LinearLayout>

            <LinearLayout style="@style/UILayoutStyle">

                <ImageView
                    android:id="@+id/iv2"
                    style="@style/UIImageStyle"
                    android:scaleType="center" />

                <TextView
                    style="@style/UITextStyle"
                    android:text="Center" />
            </LinearLayout>

            <LinearLayout style="@style/UILayoutStyle">

                <ImageView
                    android:id="@+id/iv3"
                    style="@style/UIImageStyle"
                    android:scaleType="centerCrop" />

                <TextView
                    style="@style/UITextStyle"
                    android:text="CenterCrop" />
            </LinearLayout>

            <LinearLayout style="@style/UILayoutStyle">

                <ImageView
                    android:id="@+id/iv4"
                    style="@style/UIImageStyle"
                    android:scaleType="centerInside" />

                <TextView
                    style="@style/UITextStyle"
                    android:text="CenterInside" />
            </LinearLayout>

            <LinearLayout style="@style/UILayoutStyle">

                <ImageView
                    android:id="@+id/iv5"
                    style="@style/UIImageStyle"
                    android:scaleType="fitStart" />

                <TextView
                    style="@style/UITextStyle"
                    android:text="FitStart" />
            </LinearLayout>


            <LinearLayout style="@style/UILayoutStyle">

                <ImageView
                    android:id="@+id/iv6"
                    style="@style/UIImageStyle"
                    android:scaleType="fitCenter" />

                <TextView
                    style="@style/UITextStyle"
                    android:text="FitCenter" />
            </LinearLayout>

            <LinearLayout style="@style/UILayoutStyle">

                <ImageView
                    android:id="@+id/iv7"
                    style="@style/UIImageStyle"
                    android:scaleType="fitEnd" />

                <TextView
                    style="@style/UITextStyle"
                    android:text="FitEnd" />
            </LinearLayout>

            <LinearLayout style="@style/UILayoutStyle">

                <ImageView
                    android:id="@+id/iv8"
                    style="@style/UIImageStyle"
                    android:scaleType="fitXY" />

                <TextView
                    style="@style/UITextStyle"
                    android:text="FitXY" />
            </LinearLayout>

            <LinearLayout style="@style/UILayoutStyle">

                <ImageView
                    android:id="@+id/iv9"
                    style="@style/UIImageStyle"
                    android:scaleType="matrix" />

                <TextView
                    style="@style/UITextStyle"
                    android:text="Matrix" />
            </LinearLayout>

        </GridLayout>

        <ImageView
            android:id="@+id/iv_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>
