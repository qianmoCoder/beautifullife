<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ecedf1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout style="@style/DefaultLinearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:text="编程" />

            <com.ddu.icore.ui.view.OptionItemView
                android:id="@+id/oiv_program_jet_pack"
                style="@style/DefaultRelativeLayout"
                app:i_leftIcon="@drawable/work_program_jet_pack"
                app:i_rightIcon="@drawable/right_arrow_gray"
                app:i_title="@string/work_program_jet_pack" />

            <com.ddu.icore.ui.view.OptionItemView
                android:id="@+id/oiv_program_kotlin"
                style="@style/DefaultRelativeLayout"
                app:i_leftIcon="@drawable/work_program_kotlin"
                app:i_rightIcon="@drawable/right_arrow_gray"
                app:i_title="@string/work_program_kotlin" />

            <com.ddu.icore.ui.view.OptionItemView
                android:id="@+id/oiv_program_java"
                style="@style/DefaultRelativeLayout"
                app:i_leftIcon="@drawable/work_program_java"
                app:i_rightIcon="@drawable/right_arrow_gray"
                app:i_title="@string/work_program_java" />

            <com.ddu.icore.ui.view.OptionItemView
                android:id="@+id/oiv_program_swift"
                style="@style/DefaultRelativeLayout"
                app:i_leftIcon="@drawable/work_program_swift"
                app:i_rightIcon="@drawable/right_arrow_gray"
                app:i_title="@string/work_program_swift" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
