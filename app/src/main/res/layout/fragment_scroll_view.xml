<?xml version="1.0" encoding="utf-8"?>
<com.ddu.icore.refresh.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/csv_activity_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_ff0000"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:background="@color/c_f7b218"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10">

            </RelativeLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="@color/c_f5f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_500"
                android:layout_marginTop="@dimen/dp_10">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_500"
                android:layout_marginTop="@dimen/dp_10">

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:background="@color/c_3b8fed"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10"
            android:visibility="visible">

        </RelativeLayout>


    </FrameLayout>


</com.ddu.icore.refresh.PullToRefreshScrollView>