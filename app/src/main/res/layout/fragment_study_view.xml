<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <com.ddu.ui.view.CustomerUI
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"></com.ddu.ui.view.CustomerUI>

    <Button
        android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切换"
        android:textSize="@dimen/dp_20" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_10" />

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加框文字"
        android:textSize="@dimen/dp_20" />

    <LinearLayout
        android:id="@+id/ll_toast"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_margin="@dimen/dp_20"
            android:background="@color/c_4897fa"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_toast_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="home_toast_title"
                android:textColor="@color/c_4897fa"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_toast_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="bbc"
                android:textColor="@color/c_4897fa"
                android:textSize="@dimen/dp_12" />


        </LinearLayout>


        <ImageView
            android:id="@+id/iv_toast_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/c_4897fa"
            android:scaleType="center" />

    </LinearLayout>

</LinearLayout>

