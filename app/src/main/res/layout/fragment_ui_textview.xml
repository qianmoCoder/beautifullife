<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_ffffff"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <com.ddu.ui.view.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="200å…ƒ"
            android:textSize="@dimen/dp_20"
            app:strike_thru_color="@color/c_ff0000"
            app:strike_thru_offset="10dp"
            app:strike_thru_width="3dp" />

        <com.ddu.ui.view.RevealTextView
            android:id="@+id/tv_reveal_text_view"
            style="@style/DefaultButton"
            android:layout_width="match_parent"
            android:text="Hello Reveal Text!"
            app:rtv_duration="2000" />

        <TextView
            android:id="@+id/tv_translateView"
            style="@style/DefaultButton"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Translate Floating" />


        <TextView
            android:id="@+id/tv_curveView"
            style="@style/DefaultButton"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Curve Floating" />

        <TextView
            android:id="@+id/tv_scaleView"
            style="@style/DefaultButton"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Scale Floating" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/c_4897fa">

            <com.ddu.icore.ui.view.WordView
                android:id="@+id/wv"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:gravity="center_horizontal|bottom"
                android:text="Hello" />

            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_toRightOf="@id/wv"
                android:background="#50ae55"
                android:gravity="center_horizontal|bottom"
                android:text="Hello" />
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_view_blue"
            android:text="SHAPE" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_view_blue_hollow"
            android:text="SHAPE" />

        <Button
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_view_blue_hollow_oval"
            android:text="SHAPE" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_view_green"
            android:text="SHAPE" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_view_green_hollow"
            android:text="SHAPE" />

        <Button
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_view_green_hollow_oval"
            android:text="SHAPE" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_view_red"
            android:text="SHAPE" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_view_red_hollow"
            android:text="SHAPE" />

        <Button
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_view_red_hollow_oval"
            android:text="SHAPE" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_view_yellow"
            android:text="SHAPE" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_view_yellow_hollow"
            android:text="SHAPE" />

        <Button
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_view_yellow_hollow_oval"
            android:text="SHAPE" />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
