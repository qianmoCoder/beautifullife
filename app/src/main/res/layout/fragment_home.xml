<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ecedf1"
    android:orientation="vertical">

    <com.ddu.icore.ui.viewpager.Banner
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:canLoop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical">

        <LinearLayout style="@style/HomeLinearLayout">

            <androidx.appcompat.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="智能照明" />

            </androidx.appcompat.widget.CardView>

            <androidx.appcompat.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="设备管理" />

            </androidx.appcompat.widget.CardView>

            <androidx.appcompat.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="成本分析" />

            </androidx.appcompat.widget.CardView>
        </LinearLayout>

        <LinearLayout style="@style/HomeLinearLayout">


            <androidx.appcompat.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="生产分析" />

            </androidx.appcompat.widget.CardView>

            <androidx.appcompat.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="安全保障" />

            </androidx.appcompat.widget.CardView>

            <androidx.appcompat.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="重要记录" />
            </androidx.appcompat.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
