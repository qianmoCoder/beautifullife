<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/OptionItemView">

    <ImageView
        android:id="@+id/iv_left_icon"
        style="@style/OptionItemLeftIcon" />

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_left_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/OptionItemTitle"
            tools:text="Title" />

        <TextView
            android:id="@+id/tv_sub_title"
            style="@style/OptionItemSubTitle"
            tools:text="SubTitle" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        style="@style/OptionItemContent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ll_title"
        tools:text="102.00å…ƒ" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_right_text"
            style="@style/OptionItemRightText"
            tools:text="right" />

        <ImageView
            android:id="@+id/iv_right_icon"
            style="@style/OptionItemRightIcon" />

    </LinearLayout>

</RelativeLayout>