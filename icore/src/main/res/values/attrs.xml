<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="leftText" format="string" />
    <attr name="leftTextSize" format="dimension" />
    <attr name="leftTextColor" format="color" />
    <attr name="rightText" format="string" />
    <attr name="rightTextSize" format="dimension" />
    <attr name="rightTextColor" format="color" />
    <attr name="image" format="reference" />
    <attr name="imageScaleType">
        <enum name="fillXY" value="1" />
        <enum name="center" value="5" />
    </attr>
    <attr name="carrowImage" format="reference" />
    <attr name="carrowImageScaleType">
        <enum name="fillXY" value="1" />
        <enum name="center" value="5" />
    </attr>

    <declare-styleable name="CustomItemView">
        <attr name="leftText" />
        <attr name="leftTextSize" />
        <attr name="leftTextColor" />
        <attr name="rightText" />
        <attr name="rightTextSize" />
        <attr name="rightTextColor" />
        <attr name="image" />
        <attr name="imageScaleType" />
        <attr name="carrowImage" />
        <attr name="carrowImageScaleType" />
    </declare-styleable>

    <declare-styleable name="common_title">

        <!-- 背景颜色 -->
        <attr name="bgColor" format="reference" />

        <!-- 左侧图片 -->
        <attr name="backBtnSrc" format="reference" />

        <!-- 右侧图片 -->
        <attr name="rightBtnSrc" format="reference" />
        <attr name="rightBtn2Src" format="reference" />

        <!-- 文字title -->
        <attr name="titleText" format="reference" />
        <attr name="titleColor" format="reference" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="lineSpacing" format="dimension" />
    </declare-styleable>

    <!-- 末行对齐方式 -->
    <declare-styleable name="AlignTextView">
        <attr name="align" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <!-- 标点转换 -->
    <declare-styleable name="CBAlignTextView">
        <attr name="punctuationConvert" format="boolean" />
    </declare-styleable>

    <declare-styleable name="icore_dividerLinearLayout">
        <attr name="icore_divider" format="reference" />
        <attr name="icore_divider_height" format="dimension" />
        <attr name="icore_divider_margin_left" format="dimension" />
        <attr name="icore_divider_margin_right" format="dimension" />
    </declare-styleable>

    <declare-styleable name="icore_strike_thru">
        <attr name="strike_thru_color" format="color" />
        <attr name="strike_thru_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RecyclerViewPager">
        <attr name="rvp_triggerOffset" format="float" />
        <attr name="rvp_flingFactor" format="float" />
        <attr name="rvp_singlePageFling" format="boolean" />
        <attr name="rvp_inertia" format="boolean" />
        <attr name="rvp_millisecondsPerInch" format="float" />
    </declare-styleable>

    <declare-styleable name="TimeLineMarker">
        <attr name="markerSize" format="dimension" />
        <attr name="marker" format="color|reference" />
        <attr name="beginLine" format="color|reference" />
        <attr name="endLine" format="color|reference" />
        <attr name="lineSize" format="dimension" />
        <attr name="topOffset" format="dimension" />
        <attr name="spaceOffset" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ShapeView">

        <attr name="normalTextColor" format="color|reference" />
        <attr name="pressedTextColor" format="color|reference" />
        <attr name="disableTextColor" format="color|reference" />

        <attr name="strokeDashWidth" format="dimension|reference" />
        <attr name="strokeDashGap" format="dimension|reference" />

        <attr name="normalStrokeWidth" format="dimension|reference" />
        <attr name="pressedStrokeWidth" format="dimension|reference" />
        <attr name="disableStrokeWidth" format="dimension|reference" />

        <attr name="normalStrokeColor" format="color|reference" />
        <attr name="pressedStrokeColor" format="color|reference" />
        <attr name="disableStrokeColor" format="color|reference" />

        <attr name="normalBackgroundColor" format="color|reference" />
        <attr name="pressedBackgroundColor" format="color|reference" />
        <attr name="disableBackgroundColor" format="color|reference" />

        <attr name="radius" format="dimension|reference" />

        <attr name="animationDuration" format="integer|reference" />

        <attr name="shapeType">
            <enum name="oval" value="0x01" />
            <enum name="round" value="0x02" />
            <enum name="round_rect" value="0x04" />
            <enum name="segment" value="0x08" />
        </attr>

        <attr name="direction">
            <enum name="left" value="0x0010" />
            <enum name="right" value="0x0020" />
        </attr>

    </declare-styleable>

    <declare-styleable name="StateImageView">
        <attr name="normalBackground" format="color|reference" />
        <attr name="pressedBackground" format="color|reference" />
        <attr name="disableBackground" format="color|reference" />
        <attr name="AnimationDuration" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="PullToRefresh">

        <!-- A drawable to use as the background of the Refreshable View -->
        <attr name="ptrRefreshableViewBackground" format="reference|color" />

        <!-- Mode of Pull-to-Refresh that should be used -->
        <attr name="ptrMode">
            <flag name="disabled" value="0x0" />
            <flag name="pullFromStart" value="0x1" />
            <flag name="pullFromEnd" value="0x2" />
            <flag name="both" value="0x3" />
            <flag name="manualOnly" value="0x4" />
        </attr>

        <!-- Whether the Indicator overlay(s) should be used -->
        <attr name="ptrShowIndicator" format="reference|boolean" />

        <!-- Drawable to use as Loading Indicator. Changes both Header and Footer. -->
        <attr name="ptrDrawable" format="reference" />

        <!-- Drawable to use as Loading Indicator in the Header View. Overrides value set in ptrDrawable. -->
        <attr name="ptrDrawableStart" format="reference" />

        <!-- Drawable to use as Loading Indicator in the Footer View. Overrides value set in ptrDrawable. -->
        <attr name="ptrDrawableEnd" format="reference" />

        <!-- Whether Android's built-in Over Scroll should be utilised for Pull-to-Refresh. -->
        <attr name="ptrOverScroll" format="reference|boolean" />

        <!-- Whether the user can scroll while the View is Refreshing -->
        <attr name="ptrScrollingWhileRefreshingEnabled" format="reference|boolean" />

        <!--
        	Whether PullToRefreshListView has it's extras enabled. This allows the user to be
        	able to scroll while refreshing, and behaves better. It acheives this by adding
        	Header and/or Footer Views to the ListView.
        -->
        <attr name="ptrListViewExtrasEnabled" format="reference|boolean" />

        <!--
        	Whether the Drawable should be continually rotated as you pull. This only
        	takes effect when using the 'Rotate' Animation Style.
        -->
        <attr name="ptrRotateDrawableWhilePulling" format="reference|boolean" />

        <!-- BELOW HERE ARE DEPRECEATED. DO NOT USE. -->
        <attr name="ptrAdapterViewBackground" format="reference|color" />
        <attr name="ptrDrawableTop" format="reference" />
        <attr name="ptrDrawableBottom" format="reference" />
    </declare-styleable>
    <declare-styleable name="ICoreBanner"><attr format="boolean" name="canLoop"/></declare-styleable>
    <eat-comment/>
</resources>