<resources>

    <!-- TitleBar Begin -->
    <style name="TitleBarLayout">
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/c_3b8fed</item>
    </style>

    <style name="TitleBarItemLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/dp_80</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TitleBarItemLayout.Left">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TitleBarItemLayout.Right">
        <item name="android:gravity">right</item>
    </style>

    <style name="TitleBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dp_16</item>
    </style>

    <style name="TitleBarText.Left">
        <item name="android:textColor">@color/c_ffffff</item>
    </style>

    <style name="TitleBarText.Right">
        <item name="android:textColor">@color/c_ffffff</item>
    </style>
    <!-- TitleBar End -->

    <!-- Default Dialog Begin -->
    <style name="DefaultDialogText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/dp_17</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DefaultDialogText.Left">
        <item name="android:textColor">@color/c_4897fa</item>
    </style>

    <style name="DefaultDialogText.Right">
        <item name="android:textColor">@color/c_272727</item>
    </style>
    <!-- Default Dialog End -->

    <!-- Bottom Dialog Begin -->
    <style name="BottomDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>
    <!-- Bottom Dialog End -->

    <style name="MorePopupAnim">
        <item name="android:windowEnterAnimation">@anim/popup_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_exit_anim</item>
    </style>


    <style name="MorePopupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@anim/popup_exit_anim</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:duplicateParentState">true</item>
    </style>


    <!-- OptionItemView Begin -->
    <style name="OptionItemView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="OptionItemLeftView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="OptionItemLeftView.text">
        <item name="android:layout_width">@dimen/dp_25</item>
        <item name="android:layout_height">@dimen/dp_25</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="OptionItemLeftView.Icon">
        <item name="android:layout_width">@dimen/dp_25</item>
        <item name="android:layout_height">@dimen/dp_25</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="OptionItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_000000</item>
        <item name="android:textSize">@dimen/dp_16</item>
    </style>

    <style name="OptionItemSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_999999</item>
        <item name="android:textSize">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
    </style>

    <style name="OptionItemContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_999999</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="OptionItemRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="OptionItemRightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_666666</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:layout_marginLeft">@dimen/dp_13</item>
    </style>

    <style name="OptionItemRightIcon">
        <item name="android:layout_width">@dimen/dp_16</item>
        <item name="android:layout_height">@dimen/dp_16</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
    </style>

    <style name="DialogTheme" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- OptionItemView End -->

</resources>
